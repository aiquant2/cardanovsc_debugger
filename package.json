{
  "name": "cardanovsc-debugger",
  "displayName": "cardanovsc_debugger",
  "description": "This is a debugger extension",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "capabilities": {
    "supportsStepIn": true
  },
  "activationEvents": [
    "onDebugResolve:haskell",
    "onLanguage:haskell"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "haskell",
        "extensions": [
          ".hs"
        ],
        "aliases": [
          "Haskell"
        ]
      }
    ],
    "breakpoints": [
      {
        "language": "haskell"
      }
    ],
    "supportsBreakpointLocationsRequest": true,
    "debuggers": [
      {
        "type": "haskell",
        "label": "Haskell Debugger",
        "program": "./out/debugAdapter.js",
        "runtime": "node",
        "languages": [
          "haskell"
        ],
        "configurationAttributes": {
          "launch": {
            "required": [
              "program"
            ],
            "properties": {
              "program": {
                "type": "string",
                "description": "Path to the Haskell program to debug"
              },
              "stopOnEntry": {
                "type": "boolean",
                "default": false,
                "description": "Automatically stop after launch."
              },
              "showIO": {
                "type": "boolean",
                "default": true,
                "description": "Display I/O output from the program"
              }
            }
          }
        }
      }
    ],
    "commands": [
      {
        "command": "cardanovscDebugger.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "extension.extractHaskellFunctions",
        "title": "extract function",
        "category": "test"
      },
      {
        "command": "cardanovscDebugger.getUtxoDetails",
        "title": "Get UTXO Details"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/lodash": "^4.17.16",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.16.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.2",
    "vscode-debugadapter-testsupport": "^1.51.0"
  },
  "dependencies": {
    "@vscode/debugadapter": "^1.68.0",
    "@vscode/debugprotocol": "^1.68.0",
    "await-notify": "^1.0.1",
    "axios": "^1.9.0",
    "lodash": "^4.17.21",
    "lucid-cardano": "^0.10.11",
    "rxjs": "^7.8.2",
    "typescript": "^5.8.3",
    "vscode-debugadapter": "^1.51.0"
  }
}
